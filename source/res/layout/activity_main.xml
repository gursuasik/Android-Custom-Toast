<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnShowStandartToastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Standart Toast Message" 
            android:onClick="showStandartToastMessage"/>

        <Button
            android:id="@+id/btnSuccessToastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Success Toast Message"
            android:onClick="showSuccessToastMessage" />

        <Button
            android:id="@+id/btnFailToastMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Fail Toast Message" 
            android:onClick="showFailToastMessage"/>

    </LinearLayout>

</RelativeLayout>
